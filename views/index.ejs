<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Games</title>
  <!-- Add Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
  <style>
    body {
      padding: 20px;
      background-color: #f8f9fa;
    }
    .game-card {
      margin-bottom: 20px;
      cursor: pointer;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1 class="mt-4">All Games</h1>
  
        
    <div class="row">
      <% games.forEach(game => { %>
        <div class="col-md-4 game-card" onclick="window.location.href='/games/<%= game._id %>'">
          <div class="card">
            <img src="<%= game.image %>" class="card-img-top" alt="<%= game.title %>">
            <div class="card-body">
              <h5 class="card-title"><%= game.title %></h5>
              <p class="card-text"><%= game.content %></p>
              <p class="card-text"><strong>Genre:</strong> <%= game.genre %></p>
              <p class="card-text">
                <strong>Release Date:</strong>
                <% if (game.releaseDate) { %>
                  <%= new Date(game.releaseDate).toLocaleDateString() %>
                <% } else { %>
                  N/A
                <% } %>
              </p>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
    <a href="/addgames" class="mt-3 btn btn-primary">Add a Game</a>
    <!-- Add this link inside the <body> tag in your index.ejs file -->

<a href="/genres" class="btn btn-info">View All Genres</a>

  </div>

  <!-- Add Bootstrap JS and Popper.js -->
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
</html>
